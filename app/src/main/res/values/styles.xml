<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewHeader" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="TextViewSubject" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewDetail" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="CheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@drawable/custom_select</item>
        <item name="android:button">@null</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:padding">5dp</item>
        <!--<item name="android:textColorHint">@color/hint_color</item>-->
        <item name="android:background">@drawable/line_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
