<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:background="@color/color_nev_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/nev_menu_ic"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_menu" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_menu"
                android:layout_toRightOf="@+id/img_menu"
                android:src="@mipmap/logo_ic" />


            <FrameLayout
                android:padding="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_register"
                    style="@style/TextViewSubject"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:text="@string/text_register_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/layout_check_in"
                    android:padding="7dp"
                    android:background="@drawable/bg_round_nev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.gpk.thansettakij.view.TextViews
                        android:id="@+id/tv_check_in"
                        android:textColor="@color/white"
                        android:text="Booth check-in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</layout>
